<Window x:Class="FlowStock.App.KmBatchEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Привязка заказа (КМ)" Height="260" Width="520">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="BatchInfoText" TextWrapping="Wrap" />
        <TextBlock Grid.Row="1" Text="Заказ (опционально)" Margin="0,10,0,0" />
        <ComboBox Grid.Row="2" x:Name="OrderCombo" Width="320" DisplayMemberPath="DisplayName" IsEditable="True" />
        <TextBlock Grid.Row="3" x:Name="HintText" Margin="0,8,0,0" Foreground="Gray" TextWrapping="Wrap" />
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Сохранить" Click="Save_Click" />
            <Button Content="Закрыть" IsCancel="True" Margin="8,0,0,0" />
        </StackPanel>
    </Grid>
</Window>
