<Window x:Class="FlowStock.App.KmBatchDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пакет КМ" Height="620" Width="980">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Поиск" VerticalAlignment="Center" />
            <TextBox x:Name="SearchBox" Width="240" Margin="6,0,12,0" KeyDown="SearchBox_KeyDown" />
            <TextBlock Text="Статус" VerticalAlignment="Center" />
            <ComboBox x:Name="StatusFilter" Width="160" Margin="6,0,12,0" DisplayMemberPath="Name" />
            <Button Content="Применить" Click="Apply_Click" />
            <Button Content="Сброс" Click="Reset_Click" Margin="8,0,0,0" />
            <TextBlock x:Name="UnmatchedText" Margin="16,0,0,0" VerticalAlignment="Center" Foreground="DarkSlateGray" />
        </StackPanel>
        <DataGrid x:Name="CodesGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Статус" Binding="{Binding StatusDisplay}" Width="140" />
                <DataGridTextColumn Header="GTIN14" Binding="{Binding Gtin14}" Width="140" />
                <DataGridTextColumn Header="SKU" Binding="{Binding SkuDisplay}" Width="160" />
                <DataGridTextColumn Header="Товар" Binding="{Binding NameDisplay}" Width="200" />
                <DataGridTextColumn Header="Код" Binding="{Binding CodeDisplay}" Width="*" />
                <DataGridTextColumn Header="HU" Binding="{Binding HuCode}" Width="140" />
                <DataGridTextColumn Header="Место" Binding="{Binding LocationCode}" Width="120" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Обновить" Click="Refresh_Click" />
            <Button Content="Закрыть" IsCancel="True" Margin="8,0,0,0" />
        </StackPanel>
    </Grid>
</Window>
