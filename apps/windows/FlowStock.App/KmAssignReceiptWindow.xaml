<Window x:Class="FlowStock.App.KmAssignReceiptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Коды КМ" Height="320" Width="560">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="ItemText" FontWeight="SemiBold" />
        <TextBlock Grid.Row="1" x:Name="CountText" Margin="0,4,0,0" />
        <TextBlock Grid.Row="2" Text="Пакет" Margin="0,10,0,0" />
        <ComboBox Grid.Row="3" x:Name="BatchCombo" Width="380" DisplayMemberPath="DisplayName" />
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,8,0,0">
            <Button x:Name="FillFromBatchButton" Content="Заполнить из выбранного пакета" Click="FillFromBatch_Click" />
            <Button x:Name="FillFromOrderButton" Content="Заполнить из пакета заказа" Click="FillFromOrder_Click" Margin="8,0,0,0" />
        </StackPanel>
        <TextBlock Grid.Row="5" x:Name="ResultText" Margin="0,8,0,0" Foreground="DarkSlateGray" TextWrapping="Wrap" />
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Закрыть" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
