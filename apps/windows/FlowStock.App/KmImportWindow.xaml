<Window x:Class="FlowStock.App.KmImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Импорт кодов КМ" Height="320" Width="560">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Файл" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,4,0,0">
            <TextBox x:Name="FilePathBox" Width="380" IsReadOnly="True" />
            <Button x:Name="BrowseButton" Content="Обзор..." Click="Browse_Click" Margin="8,0,0,0" Width="80" />
        </StackPanel>
        <TextBlock Grid.Row="2" x:Name="SelectedFilesText" Margin="0,6,0,0" Foreground="Gray" />
        <TextBlock Grid.Row="3" Text="Заказ (опционально)" Margin="0,10,0,0" />
        <ComboBox Grid.Row="4" x:Name="OrderCombo" Width="300" DisplayMemberPath="DisplayName" IsEditable="True" />
        <StackPanel Grid.Row="5" Margin="0,12,0,0">
            <TextBlock x:Name="ImportStatusText" Foreground="DarkSlateGray" />
            <ProgressBar x:Name="ImportProgressBar" Height="16" Margin="0,4,0,0" Minimum="0" Maximum="1" />
        </StackPanel>
        <TextBlock Grid.Row="6" x:Name="ResultText" Margin="0,12,0,0" TextWrapping="Wrap" Foreground="DarkSlateGray" />
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="ImportButton" Content="Импортировать" Click="Import_Click" />
            <Button Content="Закрыть" IsCancel="True" Margin="8,0,0,0" />
        </StackPanel>
    </Grid>
</Window>
